<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/queue_item"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginBottom="3dp">

    <ImageView
        android:id="@+id/queue_item_current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_music_box_white_36dp"
        style="@style/PlayerButton"/>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:id="@+id/queue_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Track Title" />
        <TextView
            android:id="@+id/queue_item_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/queue_item_title"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            android:text="Track Artist" />
    </RelativeLayout>
    <ImageButton
        android:id="@+id/queue_item_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_minus_circle_white_24dp"
        android:tint="@color/colorTextMenu"
        style="@style/PlayerButton"/>
</LinearLayout>